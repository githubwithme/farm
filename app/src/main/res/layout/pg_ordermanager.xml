<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line_color"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_topbar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="订单排班"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单排班"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_16"/>
            <FrameLayout

                android:layout_centerHorizontal="true"
                android:id="@+id/fl_dynamic"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/imgbtn_home"
                android:visibility="invisible"
                >

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_dynamic_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待审批"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_16"/>
            <FrameLayout

                android:layout_centerHorizontal="true"
                android:id="@+id/fl_dsp"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/imgbtn_home"
                android:visibility="invisible"
                >

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_dsp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_notpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="交易中"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_16"/>
            <FrameLayout

                android:layout_centerHorizontal="true"
                android:id="@+id/fl_jyz"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/imgbtn_home"
                android:visibility="invisible"
                >

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_jyz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_dealing"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_notpay"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>

        <TextView
            android:id="@+id/tv_allorder"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_notpay"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不通过"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>