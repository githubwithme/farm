<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="创建订单-选择产品"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/shuaxin"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="刷新"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_titlebar"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_marginBottom="60dip"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:gravity="center"
            android:text="农场断蕾情况"
            android:textColor="@color/bg_text"
            android:textSize="16sp"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/cz_startdl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_timelimit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="开始时间"
                    android:textSize="@dimen/size_20"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/startdl"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="该园区还没有开始断蕾"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_tab"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/round_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="请选择园区"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/titlebar_textsize"/>

            <ImageView
                android:id="@+id/ic_up"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/downward"
                android:contentDescription=""/>
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/rl_tab"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/round_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="fill_parent"
                android:layout_height="41dip"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_marginTop="1px"
                android:minHeight="41dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_top_left"
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="承包区"
                    android:textColor="@color/bg_text"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <com.farm.widget.CustomHorizontalScrollView_Allitem
                    android:id="@+id/item_scroll_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_park"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal">


                    </LinearLayout>
                </com.farm.widget.CustomHorizontalScrollView_Allitem>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_top_right"
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/bg_text"
                    android:textSize="15sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:id="@+id/line_middle"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_top"
                android:background="@color/gray"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_middle"
                android:layout_marginBottom="42dip"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px">

                <com.farm.widget.CustomExpandableListView
                    android:id="@+id/hlistview_scroll_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"/>
            </ScrollView>


            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_marginTop="1px"
                android:minHeight="41dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_bottom_left"
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/bg_text"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <com.farm.widget.CustomHorizontalScrollView_Allitem
                    android:id="@+id/totalScroll"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_total"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal">


                    </LinearLayout>
                </com.farm.widget.CustomHorizontalScrollView_Allitem>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/alltoatal"
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="总量"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:visibility="gone"/>


            </LinearLayout>

            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_above="@+id/ll_bottom"
                android:background="@color/gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_totalnumber"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="已选20000株"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_cancleorder"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="取消选择"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_createorder"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="生成订单"
            android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>

</RelativeLayout>