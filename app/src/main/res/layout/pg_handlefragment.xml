<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/popuwindow_height"
        android:background="@color/bg_titlebar">

        <ImageButton
            android:id="@+id/wzbtn_account"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back" />


        <LinearLayout
            android:id="@+id/wzxx_tab_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wzxx_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="处理事件"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize" />



        </LinearLayout>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center">

        <TextView
            android:id="@+id/event_ing"
            android:layout_width="120dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/red_bottom"
            android:gravity="center"
            android:text="详细情况"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize" />

        <TextView
            android:id="@+id/event_ed"
            android:layout_width="120dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="处理结果"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />


    <com.farm.widget.CustomViewPager
        android:id="@+id/cvPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:divider="@null" />
</LinearLayout>