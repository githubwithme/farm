<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dip"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:minHeight="100dip"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cmdname_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="产品批号："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd_name" />

            <TextView
                android:id="@+id/tv_cmdname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_cmdname_tip"
                android:gravity="left|center_vertical"
                android:text="CP25425444"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd_name" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:minWidth="60dip"
                android:text="销售中"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_yq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="产量："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="2000株"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="待售："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="800株"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="摘要:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="这批次香蕉质量很好，建议单价稍稍提高点！"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bzzl"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:minWidth="60dip"
                android:src="@drawable/lately2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="批次时间："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:id="@+id/tv_bzzl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2015-10-11"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:text="加入订单"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>