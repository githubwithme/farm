<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

    <ScrollView
        android:id="@+id/sl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_jobname_tip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jobname_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="指令内容："
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_jobname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@id/tv_jobname_tip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_importance_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="重要性："
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_importance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toRightOf="@id/tv_importance_tip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_yl_tip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_yl_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="农资及用量："
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_yl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="开始时间："
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_qx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="作业天数："
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_zyts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="说明:"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="50dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="来自:"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_15"/>

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:gravity="right"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>