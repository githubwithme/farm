<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_margin="10dip"
        android:background="@drawable/background_view_rounded_single"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_margin="5dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="乐丰园区"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_16"/>

            <TextView
                android:id="@+id/tv_batchtime"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_margin="5dip"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:text="05-15至04-20"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:text="实售株数"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <EditText
                android:id="@+id/et_actualnumber"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:text="500"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:text="实重/斤"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <EditText
                android:id="@+id/et_actualweight"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:text="500"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>