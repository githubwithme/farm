<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="35dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="出库详细列表"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/tv_bianjie"
                android:layout_width="50dip"
                android:layout_height="45dip"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_view_rounded_single"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14" />

            <Button
                android:id="@+id/tv_delete"
                android:layout_width="50dip"
                android:layout_height="45dip"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_view_rounded_single"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodsname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="磷肥"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="所在园区"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/parkName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="所在仓库"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/storehouseName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="批次号"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/batchName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="出库时间"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/inDate"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="出库类型"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/outType"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="数量"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <EditText
            android:id="@+id/quantity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:background="@null"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="总价"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/outGoodsvalue"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:text="备注"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/note"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:text="叶数"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"

        >
        <ProgressBar
            android:id="@+id/add_upload"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_toLeftOf="@+id/loacal"
            android:background="@null"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_toLeftOf="@+id/loacal"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/loacal"
            android:layout_width="20dip"
            android:layout_height="wrap_content" />
        <Button
            android:layout_toRightOf="@+id/loacal"
            android:id="@+id/btn_case"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />

    </RelativeLayout>
</LinearLayout>