<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="30dip"
            android:layout_height="@dimen/titlebar_height"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back"/>

        <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/imgbtn_back"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="新建非生产指令"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/titlebar_textsize"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="执行级别"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <RadioGroup
                        android:id="@+id/rg_level"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="园区"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>

                        <RadioButton
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="片区"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </RadioGroup>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="区域选择"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择区域"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="重要性"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_importance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择重要性"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="开始时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_timelimit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择开始时间"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="作业天数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_workday"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="2"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择天数"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="说明"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"/>

                    <EditText
                        android:id="@+id/et_note"
                        android:layout_width="match_parent"
                        android:layout_height="120dip"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请输入说明"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/line_color"/>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>