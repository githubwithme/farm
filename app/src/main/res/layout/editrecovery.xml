<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/defaultbackground"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_topbar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="26.7dip"
            android:layout_height="26.7dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@mipmap/btn_return"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="编辑准备工作详情"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80px"
        android:background="@color/white">


        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:text="车牌号"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/CR_chanpin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:alpha="0.8"
            android:background="@null"
            android:gravity="center"
            android:hint="请填写车牌号"
            android:paddingRight="20dip"
            android:textColor="@color/text_table_horizontitle"
            android:textSize="14sp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="包装工"
                android:textColor="@color/titlebar_top"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_bz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:alpha="0.8"
                android:gravity="center"
                android:hint="请选择包装工"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="包装工费用(元/件)"/>

            <EditText
                android:id="@+id/packPrice"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:alpha="0.8"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入包装工费用"
                android:inputType="numberDecimal"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="搬运工"
                android:textColor="@color/titlebar_top"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_by"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:alpha="0.8"
                android:gravity="center"
                android:hint="请选择搬运工"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="搬运工费用(元/件)"/>

            <EditText
                android:id="@+id/carryPrice"
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:alpha="0.8"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入搬运工费用"
                android:inputType="numberDecimal"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip"/>


        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
