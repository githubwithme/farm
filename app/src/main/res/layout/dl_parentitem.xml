<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_marginLeft="5dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <FrameLayout
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:id="@+id/fl_new_item"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            >

            <com.farm.widget.CircleImageView
                app:border_color="@color/red"
                app:border_width="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/red" />

            <TextView
                android:id="@+id/tv_new_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_10" />
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/rlstr"
            android:layout_toRightOf="@+id/fl_new_item"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView

                android:id="@+id/tv_park"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/background_view_rounded_single"
                android:gravity="center|left"
                android:paddingLeft="20dip"
                android:text="片区"
                android:textSize="@dimen/text_size_15"/>

            <ImageView
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/ic_up"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/dl_ic_down"
                android:contentDescription=""/>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>