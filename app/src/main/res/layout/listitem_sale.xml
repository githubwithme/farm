<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:background="@color/white"
    android:minHeight="100dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true" >

            <com.farm.widget.CircleImageView
                android:id="@+id/circle_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/white"
                app:border_color="@color/bg_blue"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/tv_fylx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/bg_blue"
                android:textSize="8sp" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cmdname_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单号："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd_name" />

            <TextView
                android:id="@+id/tv_cmdname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_cmdname_tip"
                android:gravity="left|center_vertical"
                android:text="DDH25425444"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd_name" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:minWidth="60dip"
                android:text="已发货"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_yq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="武鸣园区："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:id="@+id/tv_sqr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_yq"
                android:gravity="left|center_vertical"
                android:text="片区05"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:id="@+id/tv_sqje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:minWidth="60dip"
                android:text="未知"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_sqje"
                android:gravity="center"
                android:minWidth="60dip"
                android:text="采购商："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="单价￥:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2.5元"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="总价￥:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="235000元"
                android:textColor="@color/red"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_cmdname"
                android:minWidth="60dip"
                android:src="@drawable/tab_opp2"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="销售类别："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="主营销售"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_bzzl"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_cmdname"
                android:minWidth="60dip"
                android:src="@drawable/lately2"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="申请时间："
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />

            <TextView
                android:id="@+id/tv_bzzl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2015-10-11"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_cmd" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>