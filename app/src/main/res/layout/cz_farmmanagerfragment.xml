<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_topbar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="农场易"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@mipmap/icon_add"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/btn_add"
            android:background="@drawable/ic_search"
            android:textSize="16sp"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/light_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="农场工作"
                    android:textColor="@color/bg_text"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_jobself"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/logo1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="自身工作"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray"/>


                    <LinearLayout
                        android:id="@+id/ll_zl"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_view1"
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:background="@drawable/newicon_cmd"/>

                            <FrameLayout
                                android:id="@+id/fl_cmdnumber_new"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_alignParentRight="true"
                                android:visibility="gone">

                                <com.farm.widget.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@color/red"
                                    app:border_color="@color/red"
                                    app:border_width="0dp"/>

                                <TextView
                                    android:id="@+id/tv_cmdnumber_new"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_10"/>
                            </FrameLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="员工指令"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>

                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray"/>

                    <LinearLayout
                        android:id="@+id/ll_gz"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal">


                            <ImageView
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/logo1"/>

                            <FrameLayout
                                android:id="@+id/fl_worknumber_new"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_alignParentRight="true"
                                android:visibility="gone">

                                <com.farm.widget.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@color/red"
                                    app:border_color="@color/red"
                                    app:border_width="0dp"/>

                                <TextView
                                    android:id="@+id/tv_worknumber_new"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_10"/>
                            </FrameLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="员工工作"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:background="@color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_mq"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center_horizontal">


                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/newicon_plant"/>

                        <FrameLayout
                            android:id="@+id/fl_plantnumber_new"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <com.farm.widget.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@color/red"
                                app:border_color="@color/red"
                                app:border_width="0dp"/>

                            <TextView
                                android:id="@+id/tv_plantnumber_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10"/>
                        </FrameLayout>

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="苗情"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>
                </LinearLayout>


                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:id="@+id/ll_dl"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/newicon_plant"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="断蕾"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>
                </LinearLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:id="@+id/ll_sj"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/newicon_event"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="事件"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>
                </LinearLayout>


                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"/>


                <LinearLayout
                    android:id="@+id/ll_sp"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/quick_set_create_cw"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="审批"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="更多"
                    android:textColor="@color/bg_text"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/ll_kc"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/newicon_googs"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="物资"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray"/>

                    <LinearLayout
                        android:id="@+id/ll_xs"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/newicon_sale1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="销售"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray"/>

                    <LinearLayout
                        android:id="@+id/ll_tq"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/newicon_weather"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="农场天气"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
