<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/color_topbar">


            <Button
                android:id="@+id/btn_back"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_back"
                android:gravity="center"
                android:textColor="@color/bg_text"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/btn_back"
                android:text="销售"
                android:textColor="@color/white"
                android:textSize="@dimen/titlebar_textsize"/>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:layout_toLeftOf="@+id/btn_add"
                android:background="@drawable/ic_search"
                android:gravity="center"
                android:textColor="@color/bg_text"
                android:textSize="16sp"
                android:visibility="gone"/>


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_below="@+id/rl_titlebar"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/ll_topmenu"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/line"
            android:background="@color/white"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jobdoning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="区域销售"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/titlebar_textsize"/>

                <View
                    android:id="@+id/view_jobdoing"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_gravity="bottom"
                    android:background="@color/red"/>
            </FrameLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <FrameLayout
                android:id="@+id/fl_jobcomplete"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jobcomplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="批次销售"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/titlebar_textsize"/>

                <View
                    android:id="@+id/view_jobcomplete"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_gravity="bottom"
                    android:background="@color/red"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_topmenu"
            android:background="@color/line_color"/>

        <FrameLayout
            android:id="@+id/job_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line2"
            android:layout_marginBottom="60dip"
            android:divider="@null"/>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/red"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_createorders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="创建订单"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_orders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="订单管理"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_customer"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="客户合同"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>