<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_zone"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="株系"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="株高"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="增高"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/text_four"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="围径"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/text_five"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="增粗"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_six"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="叶数"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_seven"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="增叶"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_eight"
                    android:layout_width="60dip"
                    android:layout_height="45dip"

                    android:background="@drawable/bg_city_search_normal"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="绿叶数"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_12"
                    android:textStyle="bold"/>


            </LinearLayout>

            <ListView
                android:id="@+id/lv_plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"/>


        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="20dip"
        android:background="@drawable/background_view_rounded_single"
        android:text="下一步"
        android:textColor="@color/bg_text"
        android:textSize="@dimen/size_14"/>
</LinearLayout>
