<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/anim_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="农场易"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/umeng_socialize_follow_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="轻松管理"
                    android:textColor="@color/red"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="40dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/shape_round_border_red" >

                <ImageView
                    android:id="@+id/iv_tip1"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_margin="15dip"
                    android:background="@drawable/user" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dip"
                    android:layout_toRightOf="@id/iv_tip1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入手机号"
                    android:textColor="@color/bg_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    android:background="@drawable/downward" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/shape_round_border_red"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_margin="15dip"
                    android:background="@drawable/pwd" />

                <EditText
                    android:id="@+id/et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/bg_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center"
                android:layout_marginTop="30dip" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true" >

                    <com.farm.widget.CircleImageView
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:layout_gravity="center"
                        android:src="@android:color/holo_orange_light"
                        app:border_color="#00000000"
                        app:border_width="0dp" />

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_next_white" />
                </FrameLayout>

                <CheckBox
                    android:id="@+id/cb_autologin"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:hint="自动登陆"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_logining"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>