<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/anim_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="农场易"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/umeng_socialize_follow_on"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="轻松管理"
                    android:textColor="@color/red"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="40dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/background_view_rounded_single">

                <ImageView
                    android:id="@+id/iv_tip1"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_margin="15dip"
                    android:background="@drawable/user"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dip"
                    android:layout_toRightOf="@id/iv_tip1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入手机号"
                    android:textColor="@color/bg_text"
                    android:textColorHint="@color/bg_text"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:id="@+id/rl_down"
                    android:layout_width="40dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_down"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/downward"/>

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_margin="15dip"
                    android:background="@drawable/pwd"/>

                <EditText
                    android:id="@+id/et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dip"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/bg_text"
                    android:textColorHint="@color/bg_text"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/bg_text"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@color/bg_text"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vistor"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="先进去看看"
                    android:textColor="@color/bg_text"
                    android:textSize="14sp"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip">

                <CheckBox
                    android:id="@+id/cb_autologin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="自动登陆"
                    android:textColor="@color/white"
                    android:textColorHint="@color/bg_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/btn_forgetpdw"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@null"
                    android:text="忘记密码？"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_logining"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>