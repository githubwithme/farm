<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goodsname"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/hello_world"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_tip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="剩余："
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_syl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/size_14"/>

            <TextView

                android:id="@+id/tv_tip_gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="规格："
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>

        <View
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_centerInParent="true"/>


            <LinearLayout
                android:gravity="center"
                android:layout_above="@id/line"
                android:id="@+id/ll_bottem"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="40dip">
                <EditText
                    android:layout_centerInParent="true"
                    android:id="@+id/et_flsl"
                    android:layout_width="130dip"
                    android:layout_height="@dimen/size_40"

                    android:background="@drawable/background_view_rounded_single"
                    android:gravity="center"
                    android:hint="请输入肥料数量"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/bg_text"
                    android:textSize="@dimen/size_sp_16"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_above="@id/line"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@id/et_flsl"
                    android:text="/株"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_sp_16"/>
            </LinearLayout>

                <TextView
                    android:layout_above="@+id/ll_bottem"
                    android:layout_centerInParent="true"
                    android:id="@+id/storehouse"
                    android:textSize="15dip"
                    android:layout_marginLeft="150dip"
                    android:gravity="center"

                    android:text="选择批次"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip" />


            <Button
                android:id="@+id/btn_sure"
                android:layout_width="150dip"
                android:layout_height="@dimen/size_40"
                android:layout_below="@id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dip"
                android:background="@drawable/background_view_rounded_single"
                android:text="确定"
                android:textSize="@dimen/size_14"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>