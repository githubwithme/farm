<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/imgbtn_back"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/imgbtn_back"
            android:gravity="center"
            android:text="评分"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_zlnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="指令详情"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dip"
                    android:background="@drawable/background_view_rounded_single">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="指令"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                            <TextView
                                android:id="@+id/tv_comment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="20dip"
                                android:text="植保"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/line_color"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="肥料及用量"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                            <TextView
                                android:id="@+id/tv_fl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="20dip"
                                android:text="钾肥：20kg/株   有机肥：10kg/株"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/line_color"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="开始时间"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                            <TextView
                                android:id="@+id/tv_starttime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="20dip"
                                android:text="10-15"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/line_color"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="作业天数"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                            <TextView
                                android:id="@+id/tv_zyts"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="20dip"
                                android:text="5天"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/line_color"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="说明"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                            <TextView
                                android:id="@+id/tv_note"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="20dip"
                                android:text="好好施肥"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/line_color"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dip"
                            >

                            <TextView
                                android:id="@+id/tv_jd_tip"
                                android:layout_width="80dip"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dip"
                                android:text="完成率"
                                android:textColor="@color/bg_text"
                                android:textSize="@dimen/size_14"/>


                            <TextView
                                android:id="@+id/tv_jd"
                                android:layout_width="40dip"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:gravity="center"
                                android:text="0%"
                                android:textColor="@color/bg_text_small"
                                android:textSize="@dimen/size_14"/>

                            <ProgressBar
                                android:id="@+id/pb_jd"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="150dip"
                                android:layout_height="4dip"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/tv_jd"
                                android:max="100"
                                android:progress="0"/>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pfbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_zlnr"
                android:layout_marginTop="3dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="评分标准"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>


            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_score"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_below="@+id/ll_pfbz"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_y"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="优"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_12"/>

                <RadioButton
                    android:id="@+id/rb_hg"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="合格"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_12"/>

                <RadioButton
                    android:id="@+id/rb_bhg"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="不合格"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_12"/>
            </RadioGroup>

            <ExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rg_score"
                android:focusable="true"
                android:groupIndicator="@null"/>

            <LinearLayout
                android:id="@+id/ll_pfsm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableListView"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="评分说明"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>


            </LinearLayout>

            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_below="@+id/ll_pfsm"
                android:background="@color/light_gray"
                android:gravity="center"
                android:hint="请输入评分说明"
                android:textColor="@color/red"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_note"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="完成指令百分比(当天工作量/指令安排工作量)"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>

                <RelativeLayout
                    android:id="@+id/rl_percent"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_bfb"
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/background_view_rounded_single"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/size_sp_14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_bfb"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_18"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>