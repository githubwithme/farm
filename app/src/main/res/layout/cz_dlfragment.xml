<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:text="断蕾情况"
                android:textColor="@color/white"
                android:textSize="@dimen/titlebar_textsize"/>
        </LinearLayout>


        <TextView
            android:id="@+id/shuaxin"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="刷新"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pb_upload"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:text="上传"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cz_startdl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_colum"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="开始时间"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_20"
                android:visibility="gone"/>

            <Button
                android:id="@+id/tv_timelimit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_colum"
                android:background="@null"
                android:gravity="center"
                android:hint="开始时间"
                android:textSize="@dimen/size_20"/>
        </LinearLayout>

        <TextView
            android:id="@+id/startdl"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="开始断蕾"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.farm.widget.CustomExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="@color/transparent"
            android:dividerHeight="0dip"
            android:groupIndicator="@null"/>
    </ScrollView>
</LinearLayout>