<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/line_color">


    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="@dimen/titlebar_height"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="销售"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_18"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_titlebar"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginBottom="60dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/round_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="fill_parent"
            android:layout_height="41dip"
            android:layout_below="@+id/line"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:minHeight="41dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="批次/园区"
                android:textColor="@color/red"
                android:textSize="13sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <com.farm.widget.CustomHorizontalScrollView
                android:id="@+id/item_scroll_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="乐丰分场"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="双桥分场"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场1"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场2"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场3"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场4"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场5"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场6"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="其他分场7"
                        android:textColor="@color/bg_text"
                        android:textSize="13sp"/>
                </LinearLayout>
            </com.farm.widget.CustomHorizontalScrollView>
        </LinearLayout>

        <View
            android:id="@+id/line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_top"
            android:background="@color/gray"/>

        <ListView
            android:id="@+id/hlistview_scroll_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/line_middle"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:scrollbars="none">
        </ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/red"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_createorders"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="创建订单"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btn_orders"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="订单排班"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btn_customer"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="客户合同"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_14"/>
    </LinearLayout>

</RelativeLayout>
