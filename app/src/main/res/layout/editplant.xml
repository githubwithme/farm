<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back" />

        <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/imgbtn_back"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="编辑苗情"
            android:textSize="@dimen/titlebar_textsize" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:text="上传"
            android:textColor="@color/black"
            android:textSize="@dimen/titlebar_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:stretchColumns="1" >

            <!-- 植株号 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入名称"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 种名 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="数量"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入数量"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 胸径(cm) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="胸径"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_xj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择胸径(cm)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 树高(m) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="树高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_sg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入树高(m)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 枝下高(m) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="枝下高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_zxg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="枝下高(m)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 生长状况 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="生长状况"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_szzk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入生长状况"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 备注 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:id="@+id/et_bz"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入备注"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 树干图片 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="树干照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_sg_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_sg_addpicture"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 叶子图片 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="叶子照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_yz_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_yz_addpicture"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>