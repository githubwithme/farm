<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/titlebar_top">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="26.7dp"
            android:layout_height="26.7dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="库存量"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="83.3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="批次"
            android:textColor="@color/titlebar_top"
            android:textSize="16sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_batchtime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="07-05至07-20"
            android:textColor="@color/titlebar_top"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:gravity="center"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
