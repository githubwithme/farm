<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_selector"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/background_view_rounded_single"
        android:layout_marginLeft="20dip"
        android:layout_height="45dip">

        <TextView
            android:id="@+id/tv_select_pc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="第一批次—2016/2/20-2016-2/25"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14" />



        <ImageView
            android:id="@+id/iv_up_selector"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginRight="15dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/iv_flag1"
            android:background="@drawable/downward" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/rl_selector"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:background="@color/line_color" />


    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:childDivider="@color/transparent"
        android:dividerHeight="0dip"
        android:layout_height="match_parent"
        android:groupIndicator="@null"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:background="@color/line_color"
    android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_centerInParent="true"
        android:textColor="@color/bg_text"
        android:textSize="@dimen/size_sp_14"
        android:text="已选3000株"/>
    <Button
        android:layout_width="80dip"
        android:layout_alignParentRight="true"
        android:text="加入订单"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_height="match_parent"/>
</RelativeLayout>
</RelativeLayout>