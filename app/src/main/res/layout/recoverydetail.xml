<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/defaultbackground"
              android:orientation="vertical">

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_topbar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/ic_back"/>


        <LinearLayout

            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/btn_back"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="准备工作详情"
                android:textColor="@color/white"
                android:textSize="@dimen/titlebar_textsize"/>
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_save"
            android:layout_width="100dip"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="准备工作就绪"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/is_ready"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="未就绪"
            android:textSize="16dip"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="车牌号："
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/CR_chanpin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="请填写车牌号"
                android:paddingRight="20dip"
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="包装工："
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_bz"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="请选择包装工"
                android:paddingRight="20dip"
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <EditText
                android:inputType="numberDecimal"
                android:textSize="14dip"
                android:id="@+id/packPrice"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="元/件"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="搬运工："
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_by"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="请选择搬运工"
                android:paddingRight="20dip"
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <EditText
                android:inputType="numberDecimal"
                android:textSize="14dip"
                android:id="@+id/carryPrice"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="元/斤"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>
        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <ListView
            android:id="@+id/hlistview_scroll_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_middle"

            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/bg_text"
            android:dividerHeight="1px"
            android:fadingEdge="none"
            android:scrollbars="none">
        </ListView>
        </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">




    </LinearLayout>


</LinearLayout>
