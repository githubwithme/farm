<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="员工工作"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jobdoning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/view"
                android:gravity="center"
                android:text="进行中"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/titlebar_textsize"/>

            <View
                android:id="@+id/view_jobdoings"
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:layout_gravity="bottom"
                android:background="@color/red"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_jobcomplete"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jobcomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已评分"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/titlebar_textsize"/>

            <View
                android:visibility="gone"
                android:id="@+id/view_jobcompletes"
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:layout_gravity="bottom"
                android:background="@color/red"/>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <FrameLayout
        android:id="@+id/job_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>
</LinearLayout>