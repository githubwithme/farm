<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar" >

        <ImageButton
            android:id="@+id/btn_account"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back"
            android:visibility="gone" />

        <com.segmentedradio.SegmentedRadioGroup
            android:id="@+id/segment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:checkedButton="@+id/button_one"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@id/button_one"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="33dip"
                android:minWidth="70dip"
                android:text="专项"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/radio_colors" />

            <RadioButton
                android:id="@+id/button_two"
                android:button="@null"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="33dip"
                android:minWidth="70dip"
                android:text="大额"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/radio_colors" />

            <RadioButton
                android:id="@+id/button_three"
                android:button="@null"
                android:gravity="center"
                android:minHeight="33dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dip"
                android:text="小额"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/radio_colors" />
        </com.segmentedradio.SegmentedRadioGroup>

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_zx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="专项"
                    android:textColor="@color/textcolor_titlebar"
                    android:textSize="@dimen/titlebar_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dip"
                    android:background="@color/red" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_xe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:text="小额"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize" />

            <TextView
                android:id="@+id/tv_de"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:text="大额"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize" />

            <ImageView
                android:id="@+id/iv_dowm_tab"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:background="@drawable/downward"
                android:contentDescription=""
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/search" />

        <ImageButton
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_search"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_plus"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <FrameLayout
        android:id="@+id/top_container_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_margin="5dip"
        android:background="@drawable/bg_cmd_add1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:gravity="center"
            android:text="小额"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/titlebar_textsize" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.farm.widget.PullToRefreshListView
            android:id="@+id/frame_listview_news"
            style="@style/widget_listview"
            android:divider="#00000000"
            android:dividerHeight="0px" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/ic_add_red" />
    </FrameLayout>

</LinearLayout>