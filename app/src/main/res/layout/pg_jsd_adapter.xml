<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip">


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bg_main"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="承包区"
                android:textSize="15dip"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_main"/>

            <TextView
                android:id="@+id/all_cbh"
                android:layout_weight="1"
                android:textSize="15dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bg_main"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:gravity="center"
                        android:text="计划株树"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_main"/>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/jh_zhushu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="0"
                        android:numeric="decimal"
                        android:textSize="14dip"/>

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_main"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:text="实际株数"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_main"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/zhushu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint=""
                        android:numeric="decimal"
                        android:textSize="14dip"/>


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_main"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:text="正品件数"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_main"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/zhengpin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint=""
                        android:numeric="decimal"
                        android:textSize="14dip"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_main"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="次品件数"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_main"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/cipin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint=""
                        android:numeric="decimal"
                        android:textSize="14dip"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_main"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="净重"
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_main"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/jinzhong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint=""
                        android:numeric="decimal"
                        android:textSize="14dip"/>
                </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bg_main"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dip">
        <Button
            android:id="@+id/bianjie"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="修改"
            android:layout_marginRight="10dip"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

        <Button
            android:id="@+id/shanchu"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="20dip"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>


</LinearLayout>