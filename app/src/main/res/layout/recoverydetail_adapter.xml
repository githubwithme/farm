<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/titlebar_top">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/icon_vehicle_white" />


            <TextView
                android:id="@+id/CR_chanpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv"
                android:gravity="center"
                android:text="粤a5555"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/btn_vehicle_delete" />

            <Button
                android:id="@+id/button_update"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/button_delete"
                android:background="@mipmap/btn_vehicle_edit" />

            <View
                android:visibility="gone"
                android:id="@+id/view_isready"
                android:layout_toLeftOf="@+id/button_update"
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="@drawable/icon_cancle"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/white">

            <View
                android:id="@+id/view_bzg"
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="@color/titlebar_top" />

            <TextView
                android:id="@+id/tv_bzg_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_bzg"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="包装工："
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_bzg_tip"
                android:gravity="center"
                android:hint="李四"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_tip_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:gravity="center"
                android:text="元/件"
                android:textColor="@color/text_table_horizontitle" />

            <TextView
                android:id="@+id/packPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/tv_tip_unit"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="1.8"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/packPrice"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="费用："
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/white">

            <View
                android:id="@+id/view_byg"
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="@color/titlebar_top" />

            <TextView
                android:id="@+id/tv_byg_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_byg"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="搬运工："
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_by"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_byg_tip"
                android:gravity="center"
                android:hint="李四"
                android:paddingRight="20dip"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_tip_bygunit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:gravity="center"
                android:text="元/件"
                android:textColor="@color/text_table_horizontitle" />

            <TextView
                android:id="@+id/carryPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/tv_tip_bygunit"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="1.8"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/carryPrice"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="费用："
                android:textColor="@color/text_table_horizontitle"
                android:textSize="14dip" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>