<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dip"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:minHeight="100dip"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true">

            <com.farm.widget.CircleImageView
                android:id="@+id/circle_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/white"
                app:border_color="@color/transparent"
                app:border_width="0dp"/>

            <TextView
                android:id="@+id/tv_importance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jobname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dip"
                    android:gravity="left|center_vertical"
                    android:text="植保"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="45dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:text="暂无"
                    android:textColor="@color/red"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:id="@+id/tv_tip_pf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_score"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="评分:"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="未知"
                    android:textColor="@color/bg_text_small"
                    android:textSize="@dimen/size_14"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_record"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/add_voice_pressed"/>

                    <FrameLayout
                        android:id="@+id/fl_new"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="right"
                        android:visibility="gone">

                        <com.farm.widget.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@color/red"
                            app:border_color="@color/red"
                            app:border_width="0dp"/>

                        <TextView
                            android:id="@+id/tv_new"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_10"/>
                    </FrameLayout>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>