<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/moreitem_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#ffffffff"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_area"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:checked="false"
            android:paddingLeft="60dip"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/size_14"/>

        <ImageView
            android:id="@+id/moreitem_img"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:clickable="true"
            android:src="@drawable/item_collection_unselect"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/moreitem_txt"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hello_world"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_sl"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:background="@drawable/background_view_rounded_single"
                android:inputType="numberDecimal"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="kg"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_13"/>

            <Button
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/background_view_rounded_single"
                android:text="确定"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>