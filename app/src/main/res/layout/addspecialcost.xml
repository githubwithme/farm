<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar" >

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back" />

        <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/imgbtn_back"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="新建专项拨付"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="保存"
            android:textSize="@dimen/titlebar_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/bg_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:text="园区"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/tv_cmdname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择园区"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="金额"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请输入金额"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="费用类别"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/tv_selectcmd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择费用类别"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="用途"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/tv_nz"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择用途"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="限期"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/et_yl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择限期"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="备注"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/textsize_colum" />

                    <TextView
                        android:id="@+id/tv_ff"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请输入备注"
                        android:paddingLeft="40dip"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/textsize_colum" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_colum"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_record"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/height_colum"
                    android:layout_weight="1"
                    android:background="@color/line_color"
                    android:gravity="center"
                    android:text="录音"
                    android:textColor="@color/line_color"
                    android:textSize="@dimen/textsize_colum" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <Button
                    android:id="@+id/btn_rerecord"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:background="@color/line_color"
                    android:gravity="center"
                    android:text="重新录制"
                    android:textColor="@color/line_color"
                    android:textSize="@dimen/textsize_colum" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>