<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/rl_titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/color_topbar">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dip"
                android:layout_height="@dimen/titlebar_height"
                android:background="@null"
                android:contentDescription=""
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:gravity="center"
                android:text="销售"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_18"/>


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_titlebar"
            android:background="@color/line_color"/>


        <ScrollView
            android:id="@+id/sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line"
            android:layout_marginBottom="45dip"
            android:layout_marginTop="10dip"
            android:fillViewport="true"
            android:orientation="vertical">

            <com.farm.widget.CustomExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line"
                android:childDivider="@color/yellow"

                android:divider="@color/white"
                android:dividerHeight="0dip"
                android:groupIndicator="@null"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/red"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_createorders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="创建订单"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_orders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="订单排班"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_customer"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="客户合同"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>