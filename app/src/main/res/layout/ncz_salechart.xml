<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/bg_titlebar">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription=""
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/btn_back"
                android:gravity="center"
                android:text="销售"
                android:textColor="@color/bg_text"
                android:textSize="16sp"/>


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/topbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line"
            android:layout_marginBottom="45dip"
            android:layout_marginTop="15dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@color/green">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="2016农场销售情况"
                            android:textColor="@color/bg_text"
                            android:textSize="16sp"/>


                        <View
                            android:id="@+id/view_next"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:background="@drawable/next_black"/>

                        <Button
                            android:id="@+id/btn_detail"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_toLeftOf="@+id/view_next"
                            android:background="@null"
                            android:gravity="center"
                            android:text="详情"
                            android:textColor="@color/bg_text"
                            android:textSize="16sp"/>
                    </RelativeLayout>


                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_bar"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/shape_round_border_green"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="分析报告:"
                        android:textSize="15dip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text=""
                        android:textSize="15dip"/>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/green"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_createorders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="拟定订单"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_14"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btn_orders"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="订单管理"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>