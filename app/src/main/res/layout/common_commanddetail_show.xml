<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="指令详情"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_titlebar"
        android:background="@color/line_color"/>

    <ScrollView
        android:id="@+id/sl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:layout_margin="5dip">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_jobname_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jobname_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="指令内容："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_jobname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@id/tv_jobname_tip"
                android:gravity="right"
                android:text="蕉蕾喷雾"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_importance_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="重要性："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_importance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@id/tv_importance_tip"
                android:gravity="right"
                android:text="暂无"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_yl_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yl_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="农资及用量："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_yl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="开始时间："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_qx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text="2015-10-11"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="作业天数："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_zyts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text="未知"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="说明:"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text="无"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:minHeight="50dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="来自:"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text="未知"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dip"
        android:text="执行进度"
        android:textColor="@color/bg_text"
        android:textSize="@dimen/size_sp_16"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_marginTop="5dip"
        android:background="@color/white"
        android:divider="@color/transparent"
        android:dividerHeight="0dip"/>
</LinearLayout>

    </ScrollView>

</RelativeLayout>