<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:minHeight="90dip"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ll_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal">

        <com.farm.widget.CircleImageView
            android:id="@+id/iv_userimg"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/role_employee"
            app:border_color="@color/white"
            app:border_width="0dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/iv_userimg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="片区01"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_pq"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_userinfo"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/downward"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="片区工作"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_jrpq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_pgwork"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pqgz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="片区工作"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_13"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="50dip">

                    <RelativeLayout
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dip"
                            android:background="@drawable/icon_gz"/>

                        <FrameLayout
                            android:id="@+id/fl_worknumber_new"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <com.farm.widget.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/hd"
                                app:border_color="@color/red"
                                app:border_width="0dp"/>

                            <TextView
                                android:id="@+id/tv_worknumber_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10"/>
                        </FrameLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="片区工作"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_worknumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_12"
                        android:visibility="gone"/>


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="30dip"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_plant"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pqmq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="片区植株"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_13"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="50dip">

                    <RelativeLayout
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dip"
                            android:background="@drawable/icon_zz"/>

                        <FrameLayout
                            android:id="@+id/fl_plantnumber_new"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <com.farm.widget.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/hd"
                                app:border_color="@color/red"
                                app:border_width="0dp"/>

                            <TextView
                                android:id="@+id/tv_plantnumber_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10"/>
                        </FrameLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="片区苗情"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_plantnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_12"
                        android:visibility="gone"/>


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="30dip"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_cmd"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pqzl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="片区指令"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_13"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="50dip">

                    <RelativeLayout
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dip"
                            android:background="@drawable/icon_zl"/>

                        <FrameLayout
                            android:id="@+id/fl_cmdnumber_new"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <com.farm.widget.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/hd"
                                app:border_color="@color/red"
                                app:border_width="0dp"/>

                            <TextView
                                android:id="@+id/tv_cmdnumber_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10"/>
                        </FrameLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="片区指令"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_cmdnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_12"
                        android:visibility="gone"/>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>