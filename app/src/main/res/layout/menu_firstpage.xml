<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dip"
              android:background="@color/color_orange"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_set_create_account"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="生产"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sale"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_set_create_opportunity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="销售"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_good"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_set_create_agent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="库存"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tj"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_set_create_cw"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="财务"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>
</LinearLayout>