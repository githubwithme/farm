<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


        <com.farm.widget.CircleImageView
            android:id="@+id/fl_new_item"
            app:border_color="@color/red"
            app:border_width="0dp"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:src="@color/red" />



    <RelativeLayout
        android:layout_marginRight="15dip"
        android:id="@+id/groupExpand"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:background="@drawable/background_view_rounded_single"
            android:layout_alignParentLeft="true"
            android:textSize="15dip"
            android:id="@+id/tv_park"
            android:gravity="center"
            android:text="片区"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_toLeftOf="@+id/btn_bianjie"
            android:background="@drawable/background_view_rounded_single"
            android:textSize="15dip"
            android:id="@+id/tv_nums"
            android:gravity="center"
            android:text="片区"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:layout_toLeftOf="@+id/ic_up"
            android:text="编辑"
            android:layout_marginLeft="10dip"
            android:id="@+id/btn_bianjie"
            android:textSize="15dip"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="50dip" />
        <ImageView
            android:layout_marginRight="15dip"
            android:layout_alignParentRight="true"
            android:id="@+id/ic_up"
            android:layout_marginTop="15dip"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@mipmap/dl_ic_down"
            android:contentDescription=""/>
    </RelativeLayout>

</LinearLayout>