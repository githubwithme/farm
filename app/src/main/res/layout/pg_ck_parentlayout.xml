<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_margin="5dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_new_item"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:visibility="gone"
            >

            <com.farm.widget.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/red"
                app:border_color="@color/red"
                app:border_width="0dp"/>

            <TextView
                android:id="@+id/tv_new_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_10"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_inDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            >

            <TextView
                android:id="@+id/inDate"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="2016/12/12"
                android:textColor="@color/bg_text"
                android:textSize="16sp"/>
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/downward"/>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/view"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inGoodsValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认状态"
                android:textColor="@color/red"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_batchName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/ll_status"
            android:orientation="vertical">

            <TextView
                android:id="@+id/batchName"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="2016/12"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:visibility="gone"/>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>