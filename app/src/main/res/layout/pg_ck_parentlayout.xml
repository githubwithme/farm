<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_new_item"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            >

            <com.farm.widget.CircleImageView
                app:border_color="@color/red"
                app:border_width="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/red" />

            <TextView
                android:id="@+id/tv_new_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_10" />
        </FrameLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:id="@+id/inDate"
                android:text="2016/12/12"
                android:layout_width="match_parent"
                android:layout_height="50dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/batchName"
                    android:gravity="center"
                    android:text="2016/12"
                    android:layout_width="match_parent"
                    android:layout_height="50dip" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/inGoodsValue"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2016/12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>