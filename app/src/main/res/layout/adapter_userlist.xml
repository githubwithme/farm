<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">


        <com.farm.widget.CircleImageView
            android:id="@+id/circle_img"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:src="@drawable/noimg"
            app:border_color="@color/transparent"
            app:border_width="0px"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/circle_img"
            android:gravity="center"
            android:text="李四"
            android:textColor="@color/bg_text"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/colleague_phone_grey"/>

        <TextView
            android:id="@+id/tv_workarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/btn_call"
            android:gravity="center"
            android:text="ddfdsfwe"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_sp_13"/>

    </RelativeLayout>


</LinearLayout>