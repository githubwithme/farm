<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dip"
              android:layout_marginRight="10dip"
              android:layout_marginTop="3dip"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:minHeight="100dip"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="47dip"
                android:layout_height="47dip"
                android:layout_centerInParent="true">

                <com.farm.widget.CircleImageView
                    android:id="@+id/circle_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/transparent"
                    app:border_color="@color/transparent"
                    app:border_width="0px"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/expense_takepicture_select"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_importance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_new_item"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_new_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jobtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="植保"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dip">


                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="未知指令类型"
                        android:textColor="@color/bg_text_small"
                        android:textSize="@dimen/size_14"/>


                    <Button
                        android:id="@+id/btn_sure"
                        android:layout_width="45dip"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/shape_work"
                        android:gravity="center"
                        android:text="收到"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_11"/>

                    <TextView
                        android:id="@+id/tv_zf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="70dip"
                        android:gravity="center"
                        android:text="指令来源未知"
                        android:textColor="@color/red"
                        android:textSize="@dimen/size_14"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dip">


                    <TextView
                        android:id="@+id/tv_jd_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="完成率："
                        android:textColor="@color/bg_text_small"
                        android:textSize="@dimen/size_14"/>

                    <ProgressBar
                        android:id="@+id/pb_jd"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="50dip"
                        android:layout_height="4dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_jd_tip"
                        android:max="100"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tv_jd"
                        android:layout_width="40dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@id/pb_jd"
                        android:gravity="center"
                        android:text="0%"
                        android:textColor="@color/bg_text_small"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/tv_jd"
                        android:gravity="center"
                        android:text="时间未知"
                        android:textColor="@color/bg_text_small"
                        android:textSize="@dimen/size_14"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dip"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_record"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:background="@drawable/add_voice_pressed"/>

                        <FrameLayout
                            android:id="@+id/fl_new"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_gravity="right"
                            android:visibility="gone">

                            <com.farm.widget.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@color/red"
                                app:border_color="@color/red"
                                app:border_width="0dp"/>

                            <TextView
                                android:id="@+id/tv_new"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10"/>
                        </FrameLayout>
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>


</LinearLayout>