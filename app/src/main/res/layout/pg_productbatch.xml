<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">


        <ProgressBar
            android:id="@+id/main_head_progress"
            style="@style/loading_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/imgbtn_back"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="断蕾"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/titlebar_textsize"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_below="@+id/rl_titlebar"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/ll_menu"
            android:background="@color/line_color"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/pb_upload"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line">

            <com.tencent.tencentmap.mapsdk.map.MapView
                android:id="@+id/mapview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="35dip"
                android:background="@color/bg_yellow"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="110dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_showlayer"
                    android:layout_width="45dip"
                    android:layout_height="25dip"
                    android:background="@drawable/background_view_rounded_single"
                    android:gravity="center"
                    android:text="图层"
                    android:textColor="@color/bg_text"
                    android:textSize="12sp"/>


                <Button
                    android:id="@+id/btn_yx"
                    android:layout_width="45dip"
                    android:layout_height="25dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/background_view_rounded_single"
                    android:gravity="center"
                    android:text="2D"
                    android:textColor="@color/bg_text"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="45dip"
                    android:layout_height="25dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/background_view_rounded_single"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="设置"
                    android:textColor="@color/bg_text"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_canclepaint"
                    android:layout_width="45dip"
                    android:layout_height="25dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/background_view_rounded_single"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/bg_text"
                    android:textSize="12sp"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sm"
                android:layout_width="30dip"
                android:layout_height="140dip"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="40dip"
                android:layout_marginLeft="5dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="区域"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>


                <TextView
                    android:id="@+id/v_salein"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="未断蕾"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_saleout"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="已断蕾"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="45dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_all_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="所有手势"/>

                <CheckBox
                    android:id="@+id/cb_compass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="指南针"/>

                <CheckBox
                    android:id="@+id/cb_zoom_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="缩放控件"/>

                <CheckBox
                    android:id="@+id/cb_location_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="定位控件"/>

                <CheckBox
                    android:id="@+id/cb_rotate_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="旋屏手势"/>

                <CheckBox
                    android:id="@+id/cb_scroll_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="划屏手势"/>

                <CheckBox
                    android:id="@+id/cb_tilt_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="视角手势"/>

                <CheckBox
                    android:id="@+id/cb_zoom_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="缩放手势"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_showlayer"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="10dip"
                android:background="@drawable/background_view_rounded_single"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="区块标识"/>
                <CheckBox
                    android:id="@+id/cb_park"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="园区标识"/>

                <CheckBox
                    android:id="@+id/cb_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="片区标识"/>

                <CheckBox
                    android:id="@+id/cb_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="承包区标识"/>


                <CheckBox
                    android:id="@+id/cb_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="房子"/>

                <CheckBox
                    android:id="@+id/cb_road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="道路"/>

                <CheckBox
                    android:id="@+id/cb_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点"/>

                <CheckBox
                    android:id="@+id/cb_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="线"/>

                <CheckBox
                    android:id="@+id/cb_mian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="面"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="bottom"
                android:background="@drawable/background_view_rounded_single"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/bg_text"
                android:textSize="14sp"
                android:visibility="gone"/>


        </FrameLayout>
    </RelativeLayout>


</LinearLayout>