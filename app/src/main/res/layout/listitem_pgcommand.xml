<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="3dip"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="100dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true" >

            <com.farm.widget.CircleImageView
                android:id="@+id/circle_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@color/white"
                app:border_color="@color/transparent"
                app:border_width="0dp" />

            <TextView
                android:id="@+id/tv_importance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="植保"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14" />

            <CheckBox
                android:id="@+id/cb_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_cmd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dip" >

            <TextView
                android:id="@+id/tv_jd_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="完成率："
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14" />

            <ProgressBar
                android:id="@+id/pb_jd"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="90dip"
                android:layout_height="4dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_jd_tip"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_jd"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/pb_jd"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/bg_text_small"
                android:textSize="@dimen/size_14" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="45dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/shape_work"
                android:gravity="center"
                android:text="收到"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dip" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="时间未知"
                android:textColor="@color/bg_text_small"
                android:textSize="@dimen/size_14" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add_voice_pressed" />

                <FrameLayout
                    android:id="@+id/fl_new"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:visibility="gone" 
                    android:layout_gravity="right">

                    <com.farm.widget.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@color/red"
                        app:border_color="@color/red"
                        app:border_width="0dp" />

                    <TextView
                        android:id="@+id/tv_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10" />
                </FrameLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>