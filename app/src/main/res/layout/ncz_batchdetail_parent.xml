<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/background_view_rounded_single"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_batchtime"
            android:layout_width="match_parent"
            android:layout_height="30dip"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_areaname"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="片区一号"
                android:textColor="@color/bg_text"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_batchtime"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待售350000"
                android:textColor="@color/red"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:text="已售10000  售中10000  拟售10000"
            android:textColor="@color/gray"
            android:textSize="12sp"/>
    </LinearLayout>


</LinearLayout>