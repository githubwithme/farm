<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@color/line_color"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="假茎表现"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="20dip"
                android:stretchColumns="1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="干净度"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_jj_gjd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择干净度"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="光泽"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_jj_gz"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择光泽"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="折断"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_jj_zd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择折断情况"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="叶鞘无剥离"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_jj_yswbl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择剥离情况"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@color/line_color"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="叶表现"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="20dip"
                android:stretchColumns="1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="叶色"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_y_ys"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择叶色"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="硬度"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_y_yd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择硬度"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="干净度"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择干净度"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="折叶"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择折叶情况"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@color/line_color"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="根系表现"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="20dip"
                android:stretchColumns="1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:text="根数量"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择根数量"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="白根"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择白根情况"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="线虫"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请选择线虫情况"
                        android:paddingLeft="40dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>


            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/line_color"/>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/background_view_rounded_single"
                android:text="确定"
                android:textColor="@color/bg_text"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>