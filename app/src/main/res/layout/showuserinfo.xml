<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/btn_back"
            android:text="详细资料"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_margin="10dip"
                android:background="@color/white">

                <com.farm.widget.CircleImageView
                    android:id="@+id/circle_img"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/role_employee"
                    app:border_color="#00000000"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/circle_img"
                    android:gravity="left|center_vertical"
                    android:text="男"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_sp_16"/>

                <TextView
                    android:id="@+id/tv_zw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:text="场长"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_sp_16"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip">


                    <TextView
                        android:id="@+id/tv_phone_tip"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="手机号"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_16"/>


                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/tv_phone_tip"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>

                    <Button
                        android:id="@+id/btn_call"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@mipmap/call"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip">


                    <TextView
                        android:id="@+id/tv_userQQtip"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="QQ"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_16"/>


                    <TextView
                        android:id="@+id/tv_userQQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/tv_userQQtip"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:background="@color/line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip">


                    <TextView
                        android:id="@+id/tv_userWXtip"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="微信"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_16"/>


                    <TextView
                        android:id="@+id/tv_userWX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/tv_userWXtip"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip">


                    <TextView
                        android:id="@+id/tv_areatip"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="区域"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_16"/>


                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/tv_areatip"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip">


                    <TextView
                        android:id="@+id/tv_contractNametip"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="承包区"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_sp_16"/>


                    <TextView
                        android:id="@+id/tv_contractName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/tv_contractNametip"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_sp_16"/>
                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>