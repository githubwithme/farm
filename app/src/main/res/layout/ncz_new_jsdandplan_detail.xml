                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/white"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"/>
            <TextView
                android:id="@+id/tcss"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:gravity="center|left"
                android:text="销售情况明细"
                android:textSize="@dimen/size_16"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/rl_note"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/round_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="fill_parent"
                    android:layout_height="41dip"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:minHeight="41dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_top_left"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="批次/承包区"
                        android:textColor="@color/bg_text"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <com.farm.widget.CustomHorizontalScrollView_Allitem
                        android:id="@+id/item_scroll_title"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/ll_park"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </com.farm.widget.CustomHorizontalScrollView_Allitem>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_top_right"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="合计"
                        android:textColor="@color/bg_text"
                        android:textSize="15sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <View
                    android:id="@+id/line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll_top"
                    android:background="@color/gray"/>

                <ListView
                    android:id="@+id/hlistview_scroll_list"
                    android:layout_width="fill_parent"
                    android:layout_height="300dip"
                    android:layout_below="@+id/line_middle"
                    android:layout_marginBottom="42dip"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"
                    android:fadingEdge="none"
                    android:scrollbars="none">
                </ListView>

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentBottom="true"
