<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/fl_dynamic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip">

                        <View
                            android:id="@+id/view_user"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_centerVertical="true"
                            android:background="@drawable/user"/>

                        <TextView
                            android:id="@+id/tv_buyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@id/view_user"
                            android:gravity="center"
                            android:text="李总"
                            android:textColor="@color/bg_text"
                            android:textSize="16sp"/>

                        <com.farm.widget.CircleImageView
                            android:id="@+id/circleImageView"
                            android:layout_width="8dip"
                            android:layout_height="8dip"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="left|top"
                            android:src="@color/red"
                            android:visibility="gone"
                            app:border_color="@color/red"
                            app:border_width="0dp"/>

                    </RelativeLayout>


                    <View
                        android:id="@+id/view_buyer_goto"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/ic_next"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_orderstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="已付150000元"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dip"
                        android:layout_marginRight="3dip"/>

                    <TextView
                        android:id="@+id/tv_unpaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="待付150000元"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="单价￥:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="2.5元"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:gravity="center"
                    android:text="总价￥:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="待反馈"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_fromtip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:text="产地:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_fromtip"
                    android:gravity="left"
                    android:text="乐丰园区"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip">


                <TextView
                    android:id="@+id/tv_car_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:gravity="left"
                    android:text="车辆："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/ll_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_car_tip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:text="3车"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/ic_down_up"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_product_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/ll_car"
                    android:gravity="left"
                    android:text="产品："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_product_tip"
                    android:gravity="left"
                    android:text="香蕉"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_parkname_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/tv_product"
                    android:gravity="left"
                    android:text="采收区："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_parkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_parkname_tip"
                    android:gravity="left"
                    android:text="乐丰园区"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@color/defaultbackground_light">


                <TextView
                    android:id="@+id/tv_allsettlement_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="已上报"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_settlementnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_allsettlement_tip"
                    android:gravity="left"
                    android:text="4个"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_settlementnumber"
                    android:gravity="left"
                    android:text="结算单："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@+id/tv_tip1">

                    <TextView
                        android:id="@+id/tv_settlement_successnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="left"
                        android:text="2个"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_settlement_successnumbernote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_settlement_successnumber"
                        android:gravity="left"
                        android:text="结算成功；"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_waitforsettlementnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_settlement_successnumbernote"
                        android:gravity="left"
                        android:text="1个"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_waitforsettlementnumber"
                        android:gravity="left"
                        android:text="等待付款"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip">

                <LinearLayout
                    android:id="@+id/ll_undeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view_depositstatus1"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/icon_ok"/>

                    <TextView
                        android:id="@+id/tv_depositStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="免付定金"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_unfinalpay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view_finalpaystatus"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_ok"/>

                    <TextView
                        android:id="@+id/tv_finalpayStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="免付尾款"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dip">

                    <View
                        android:layout_width="17dip"
                        android:layout_height="17dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/user"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:gravity="left"
                        android:text="负责人："
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>


                    <LinearLayout
                        android:id="@+id/ll_mainpeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_mainpeple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="left"
                            android:text="李四"
                            android:textColor="@color/gray"
                            android:textSize="14sp"/>

                        <View
                            android:id="@+id/view_mainpeople_goto"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/ic_next"/>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip">


                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_changetime"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="调整时间"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_preparework"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/btn_changetime"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="准备工作"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btn_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="完成"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_cancleorder"
                    android:layout_width="40dip"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/btn_complete"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="取消"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_editorder"
                    android:layout_width="40dip"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/btn_cancleorder"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="编辑"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_showSettlement"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/btn_editorder"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="查看|修改结算单"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/line_color"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>