<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/bg_titlebar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/back"/>


        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_flyl"
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_yl_tip"
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="采购商"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="单价"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_planprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="初定重量(斤)"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_planweight"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="初定总价(元)"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_plansumvalues"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="定金(元)"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_deposit"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="尾款(元)"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_finalpayment"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="采购商电话"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="采购商地址"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="采购商邮箱"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="备注"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>


                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dip"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/round_gray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="销售明细条目"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_sp_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="实售"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_sp_16"/>

                        <TextView
                            android:id="@+id/tv_actualnumber"
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_sp_18"/>

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:background="@drawable/round_gray"
                            android:gravity="center"
                            android:text="实重"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_sp_16"/>

                        <TextView
                            android:id="@+id/tv_actualweight"
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_sp_18"/>

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="实际总价"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_sp_16"/>

                        <TextView
                            android:id="@+id/tv_actualsumvalues"
                            android:layout_width="0dip"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_sp_18"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:background="@color/white"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>