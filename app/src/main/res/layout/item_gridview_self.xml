<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true">

                <com.farm.widget.CircleImageView
                    android:id="@+id/typeicon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/noimg"
                    app:border_color="@color/transparent"
                    app:border_width="0px"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/expense_takepicture_select"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_importance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_fl"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="25dip"
            android:layout_toRightOf="@+id/rl_img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/typename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="植保"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_sp_14"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip">


                <TextView
                    android:id="@+id/tv_gg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="规格"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_sp_14"/>
            </RelativeLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_fl"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_flsl"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/background_view_rounded_single"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="植株数量"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <TextView
                android:id="@+id/tv_zzs"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:text="未知"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="肥料用量"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <TextView
                android:id="@+id/tv_flsl"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:text="未知"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="共需"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_allnumber"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:text="未知"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_14"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>