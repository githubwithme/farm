<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/popuwindow_height"
        android:background="@color/bg_titlebar">

        <ImageButton
            android:id="@+id/wzbtn_account"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back" />

        <TextView

            android:id="@+id/wzxx_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/btn_account"
            android:gravity="center"
            android:text="库存"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/home_textsize_find" />

        <LinearLayout
            android:id="@+id/wzxx_tab_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wzxx_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="xxx"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center">

        <TextView
            android:id="@+id/wz_pici"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/red_bottom"
            android:gravity="center"
            android:text="批次"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize" />

        <TextView
            android:id="@+id/wz_fenbu"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="分布"
            android:textColor="@color/textcolor_titlebar"
            android:textSize="@dimen/titlebar_textsize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />


    <com.farm.widget.CustomViewPager
        android:id="@+id/cvPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:divider="@null" />
</LinearLayout>