<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:minHeight="120dip"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="5dip"
                android:background="@color/white"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">
<LinearLayout
    android:id="@+id/ll_buyer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/fl_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="李总"
            android:textColor="@color/bg_text"
            android:textSize="16sp"/>
        <com.farm.widget.CircleImageView
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_gravity="left|top"
            android:src="@color/red"
            android:visibility="gone"
            app:border_color="@color/red"
            app:border_width="0dp"/>

    </FrameLayout>


    <View
        android:id="@+id/view_buyer_goto"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:background="@drawable/ic_next"/>
</LinearLayout>



                <TextView
                    android:id="@+id/tv_orderstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:layout_marginRight="5dip"
                    android:text="等待买家付款"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_preparestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@+id/tv_orderstate"
                    android:gravity="left"
                    android:text="就绪"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="单价￥:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="2.5元"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:gravity="center"
                    android:text="总价￥:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="待反馈"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_fromtip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:text="产地:"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_fromtip"
                    android:gravity="left"
                    android:text="乐丰园区"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip">


                <TextView
                    android:id="@+id/tv_car_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:text="车辆："
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_car_tip"
                    android:gravity="left"
                    android:text="3车"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/tv_car"
                    android:gravity="left"
                    android:text="产品："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_product_tip"
                    android:gravity="left"
                    android:text="香蕉"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_mainpeople_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/tv_product"
                    android:gravity="left"
                    android:text="负责人："
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>


                <LinearLayout
                    android:id="@+id/ll_mainpeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_mainpeople_tip"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_mainpeple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:text="李四"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/view_mainpeople_goto"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/ic_next"/>
                    </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip">

                <TextView
                    android:id="@+id/tv_parkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:gravity="left"
                    android:text="乐丰园区"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/btn_changetime"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_marginTop="5dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="调整时间"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btn_preparework"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="7dip"
                    android:layout_toLeftOf="@+id/btn_changetime"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="准备工作"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btn_cancleorder"
                    android:layout_width="40dip"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_white"
                    android:layout_toLeftOf="@+id/btn_preparework"
                    android:gravity="center"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:minWidth="60dip"
                    android:text="取消"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btn_editorder"
                    android:layout_width="40dip"
                    android:layout_height="27dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_white"
                    android:layout_toLeftOf="@+id/btn_cancleorder"
                    android:gravity="center"
                    android:layout_marginRight="7dip"
                    android:layout_marginTop="5dip"
                    android:minWidth="60dip"
                    android:text="编辑"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

            </RelativeLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/line_color"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>