<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line_color"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_topbar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="订单排班"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单排班"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>

        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待审批"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>

        <TextView
            android:id="@+id/tv_notpay"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待付定金"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>


        <TextView
            android:id="@+id/tv_dealing"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_notpay"
            android:layout_weight="1"
            android:gravity="center"
            android:text="交易中"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>

        <TextView
            android:id="@+id/tv_allorder"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_notpay"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_sp_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
