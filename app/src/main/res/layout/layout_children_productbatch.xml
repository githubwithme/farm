<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dip"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/line_color"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_areaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="第一片区"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_14"/>


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="300"
            android:layout_marginRight="15dip"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_14"/>
        <TextView
            android:id="@+id/tv_number_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_number"
            android:text="合计待售:"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_14"/>

    </RelativeLayout>
    <com.farm.widget.CustomGridview
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="1dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="1dp"/>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginLeft="20dip">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/bg_text"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="60dip"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/bg_yellow"
            android:gravity="center"
            android:text="11-15"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jd"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="34%"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_pf"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8分"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="这次完成得不错！"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_14"/>

        <ImageView
            android:layout_width="8dip"
            android:layout_height="13dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dip"
            android:background="@drawable/next_gray"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
