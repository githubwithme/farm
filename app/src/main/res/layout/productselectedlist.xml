<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/titlebar_top">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="26.7dp"
            android:layout_height="26.7dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:contentDescription=""
            android:src="@mipmap/btn_return"/>


        <TextView
            android:id="@+id/tv_parkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="一号园区库存量"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_titlebar"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="承包区"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="批次"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/titlebar_top"
            android:textSize="14sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
