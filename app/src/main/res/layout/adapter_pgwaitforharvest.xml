<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginRight="5dip">

                <RelativeLayout
                    android:id="@+id/fl_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@color/titlebar_top"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_user"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/tv_number"
                        android:background="@mipmap/icon_buyyer" />

                    <LinearLayout
                        android:id="@+id/ll_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/view_user"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_buyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:gravity="center"
                            android:text="李总"
                            android:textColor="@color/text_table_horizontitle"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/view_buyer_call"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:background="@mipmap/icon_phone" />
                    </LinearLayout>


                    <com.farm.widget.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="8dip"
                        android:layout_height="8dip"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left|top"
                        android:src="@color/red"
                        android:visibility="gone"
                        app:border_color="@color/red"
                        app:border_width="0dp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/btn_cancleorder"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/btn_vehicle_delete_green"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_editorder"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip"
                    android:layout_toLeftOf="@+id/btn_cancleorder"
                    android:background="@drawable/btn_vehicle_edit_green"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="订单状态"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_orderstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dip"
                    android:text="待采收"
                    android:textColor="@color/titlebar_top"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                android:visibility="gone" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="准备状态"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_preparestatus"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dip"
                    android:text="未就绪"
                    android:textColor="@color/titlebar_top"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                android:visibility="gone" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="产品"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dip"
                    android:text="香蕉"
                    android:textColor="@color/titlebar_top"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="区域"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_parkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dip"
                    android:text="一号园区"
                    android:textColor="@color/titlebar_top"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="车辆"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_car"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="共-1车；"
                        android:textColor="@color/titlebar_top"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="已就绪："
                        android:textColor="@color/titlebar_top"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_readynumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="-1车；"
                        android:textColor="@color/text_table_horizontitle"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="未就绪："
                        android:textColor="@color/titlebar_top"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notreadynumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="-1车"
                        android:textColor="@color/text_table_horizontitle"
                        android:textSize="12sp" />


                    <View
                        android:id="@+id/view_cardetail"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:background="@mipmap/icon_arrow_left_red" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    android:text="定金"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_depositStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dip"
                    android:text="免付定金"
                    android:textColor="@color/titlebar_top"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/titlebar_top" />/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mainpeople_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="left"
                    android:text="负责人："
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_mainpeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_mainpeople_tip"
                    android:gravity="left"
                    android:text="暂无"
                    android:textColor="@color/text_table_horizontitle"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_mainpeople_call"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_mainpeople"
                    android:background="@mipmap/icon_phone" />/>

                <Button
                    android:id="@+id/btn_changetime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/titlebar_top"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="调整时间"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_buttomline"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/btn_changetime"
                    android:background="@color/white" />/>

                <Button
                    android:id="@+id/btn_orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view_buttomline"
                    android:background="@color/titlebar_top"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:text="订单详情"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_buttomline2"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/btn_orderdetail"
                    android:background="@color/white" />/>

                <Button
                    android:id="@+id/btn_addjsd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view_buttomline2"
                    android:background="@color/titlebar_top"
                    android:gravity="center"
                    android:minWidth="60dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:text="填写结算单"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>