<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">


    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/background_view_rounded_single"
                android:stretchColumns="1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="已选择肥料"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_nz"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="已选区域及肥料用量"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_flyl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:paddingLeft="10dip"
                        android:text="重要性"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_importance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>
                <!-- 树高(m) -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="作业天数"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_workday"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="2"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="作业期限"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_timelimit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_colum"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginTop="5dip"
                    android:background="@color/line_color"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_colum"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="说明"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14"/>

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="match_parent"
                        android:layout_height="120dip"
                        android:layout_span="3"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingLeft="40dip"
                        android:paddingRight="10dip"
                        android:textColor="@color/bg_yellow"
                        android:textSize="@dimen/size_14"/>
                </TableRow>
            </TableLayout>


            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/background_view_rounded_single"
                android:text="确定"
                android:textColor="@color/bg_text"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>