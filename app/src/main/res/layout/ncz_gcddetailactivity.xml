<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="@dimen/titlebar_height"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="观测点详情"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_titlebar"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_nodatatip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="改观测点下暂无植株"
            android:textSize="16sp"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:text="观测点总体情况"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarStyle="outsideInset"
                    android:text="株数："
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_zs"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="暂无数据"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_location"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dip"
                        android:background="@drawable/location1"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarStyle="outsideInset"
                    android:text="平均株高："
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_average_zg"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="暂无数据"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="平均围径："
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_average_wj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="暂无数据"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均叶数："
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_average_ys"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:scrollbarStyle="outsideInset"
                    android:text="暂无数据"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="平均绿叶数："
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_average_lys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="暂无数据"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="left|center_vertical"
                android:text="植株最新观测情况"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/line_color"/>

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:text="植株观察历史"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/line_color"/>

            <FrameLayout
                android:id="@+id/rl_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/round_white">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center|center_horizontal"/>

                <View
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/downward"/>
            </FrameLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="7dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tip_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="注：向左滑动加载更多"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tip_hd"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="wrap_content"
                    android:layout_height="41dip"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:minHeight="41dip"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_top_left"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="观测日期"
                        android:textColor="@color/bg_text"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <com.farm.widget.CustomHorizontalScrollView_PlantObserve
                        android:id="@+id/item_scroll_title"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/ll_park"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="状态"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray"/>


                            <TextView
                                android:id="@+id/tv_photo"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="图片"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray"/>

                            <TextView
                                android:id="@+id/tv_zg"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="株高"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray"/>

                            <TextView
                                android:id="@+id/tv_wj"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="围径"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray"/>

                            <TextView
                                android:id="@+id/tv_ys"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="叶数"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray"/>

                            <TextView
                                android:id="@+id/tv_lys"
                                android:layout_width="50dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="绿叶数"
                                android:textColor="@color/bg_text"
                                android:textSize="14sp"/>


                        </LinearLayout>
                    </com.farm.widget.CustomHorizontalScrollView_PlantObserve>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>


                </LinearLayout>

                <View
                    android:id="@+id/line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll_top"
                    android:background="@color/gray"/>

                <ListView
                    android:id="@+id/hlistview_scroll_list"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/line_middle"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"
                    android:fadingEdge="none"
                    android:scrollbars="none">
                </ListView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
