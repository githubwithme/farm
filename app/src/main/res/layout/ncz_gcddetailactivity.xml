<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="@dimen/titlebar_height"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="观测点详情"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_18"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_titlebar"
        android:background="@color/line_color"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"/>

    <FrameLayout
        android:id="@+id/rl_spinner"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_below="@+id/lv"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/round_white">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|center_horizontal"/>

        <View
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="3dip"
            android:background="@drawable/downward"/>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="41dip"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:minHeight="41dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_top_left"
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="植株"
                android:textColor="@color/bg_text"
                android:textSize="15sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <com.farm.widget.CustomHorizontalScrollView_PlantObserve
                android:id="@+id/item_scroll_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_park"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zg"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="株高"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_wj"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="围径"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_ys"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="叶数"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_lys"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="绿叶数"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="状态"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="图片"
                        android:textColor="@color/bg_text"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.farm.widget.CustomHorizontalScrollView_PlantObserve>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"/>


        </LinearLayout>

        <View
            android:id="@+id/line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_top"
            android:background="@color/gray"/>

        <ListView
            android:id="@+id/hlistview_scroll_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/line_middle"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:scrollbars="none">
        </ListView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"/>
    </RelativeLayout>


</RelativeLayout>
