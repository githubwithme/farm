<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back"/>
        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="断蕾情况"
                android:textColor="@color/textcolor_titlebar"
                android:textSize="@dimen/titlebar_textsize"/>
            <ImageView
                android:id="@+id/ic_up"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/downward"
                android:contentDescription="" />
        </LinearLayout>



        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:id="@+id/shuaxin"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="刷新"
            android:textSize="20dip"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/line_color" />
    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_upload"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center"
            android:text="上传"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/cz_startdl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_timelimit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_colum"
                android:background="@null"
                android:gravity="center"
                android:hint="开始时间"
                android:textSize="@dimen/size_20"/>
        </LinearLayout>
        <TextView
            android:id="@+id/startdl"
            android:text="还没有进行断蕾"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dip" />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.farm.widget.CustomExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="@color/transparent"
            android:dividerHeight="0dip"
            android:groupIndicator="@null"/>
    </ScrollView>
</LinearLayout>