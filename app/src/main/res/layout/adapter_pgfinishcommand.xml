<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:background="@drawable/newicon_cmd"/>

            <TextView
                android:id="@+id/tv_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/view"
                android:gravity="center"
                android:text="植保"
                android:textColor="@color/bg_text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_zf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="来源未知"
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <FrameLayout
                android:id="@+id/fl_new_item"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_new_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:background="@color/defaultbackground_light"
            >


            <TextView
                android:id="@+id/tv_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/tv_time_tip"
                android:gravity="center"
                android:text="06-15"
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_days_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/tv_time"
                android:gravity="center"
                android:text="作业天数："
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_days_tip"
                android:gravity="center"
                android:text="3天"
                android:textColor="@color/gray"
                android:textSize="13sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:background="@color/defaultbackground_light"
            >


            <TextView
                android:id="@+id/tv_area_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:gravity="center"
                android:text="执行区域："
                android:textColor="@color/gray"
                android:textSize="13sp"/>


            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_area_tip"
                android:gravity="center"
                android:text="片区一;片区二片区三片区四"
                android:textColor="@color/gray"
                android:textSize="13sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:background="@color/defaultbackground_light"
            >


            <TextView
                android:id="@+id/tv_jd_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:gravity="center"
                android:text="完成率："
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <ProgressBar
                android:id="@+id/pb_jd"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="90dip"
                android:layout_height="4dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_jd_tip"
                android:max="100"
                android:progress="0"/>

            <TextView
                android:id="@+id/tv_jd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/pb_jd"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/gray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_type_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_jd"
                android:gravity="center"
                android:text="类型："
                android:textColor="@color/bg_text"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_type_tip"
                android:gravity="center"
                android:text="未知"
                android:textColor="@color/bg_text"
                android:textSize="14sp"
                android:visibility="gone"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dip"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:background="@drawable/feedback"/>

                <FrameLayout
                    android:id="@+id/fl_new"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_gravity="right"
                    android:visibility="gone">

                    <com.farm.widget.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@color/red"
                        app:border_color="@color/red"
                        app:border_width="0dp"/>

                    <TextView
                        android:id="@+id/tv_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10"/>
                </FrameLayout>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_goodsused"
                    android:layout_width="70dip"
                    android:layout_height="28dip"
                    android:background="@drawable/round_white"
                    android:text="使用物资"
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/btn_assess"
                    android:layout_width="70dip"
                    android:layout_height="28dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/round_white"
                    android:text="进行考核"
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/btn_progress"
                    android:layout_width="70dip"
                    android:layout_height="28dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/round_white"
                    android:text="反馈进度"
                    android:textColor="@color/bg_text"
                    android:textSize="13sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>
    </LinearLayout>


</LinearLayout>