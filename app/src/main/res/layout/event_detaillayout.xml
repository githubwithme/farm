<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_white">


    <RelativeLayout
        android:id="@+id/rl_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_upload"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_marginRight="10dip"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:text="上传"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:stretchColumns="1" >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="上报者"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_reported"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择事件类型"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="上报时间"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择事件类型"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="事件类型"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择事件类型"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="事件描述"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/et_sjms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:gravity="right|center_vertical"
                    android:hint="请输入事件描述"
                    android:paddingLeft="10dip"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />

            <TableRow
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="处理情况"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <EditText
                    android:id="@+id/et_clqk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入处理情况"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_picture"
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="现场照片"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginRight="@dimen/size_60"
                    android:layout_toRightOf="@id/tv_picture" >

                    <LinearLayout
                        android:id="@+id/ll_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="现场视频"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginRight="@dimen/size_60"
                    android:layout_toRightOf="@id/tv_video" >

                    <LinearLayout
                        android:id="@+id/ll_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>


            </RelativeLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>