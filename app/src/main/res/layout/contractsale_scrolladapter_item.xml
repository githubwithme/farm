<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/row_hlistview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_green_round_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_titlev"
            android:layout_width="@dimen/width_firstcolumn"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="批次"
            android:textColor="@color/titlebar_top"
            android:textSize="15sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.farm.widget.CustomHorizontalScrollView_Allitem
            android:id="@+id/item_chscroll_scroll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_middle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">


            </LinearLayout>
        </com.farm.widget.CustomHorizontalScrollView_Allitem>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/splitline"/>
    </LinearLayout>


    <View
        android:layout_width="1px"
        android:layout_height="50dip"
        android:background="@color/splitline"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_total"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="合计"
            android:textColor="@color/titlebar_top"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/splitline"/>
    </LinearLayout>
</LinearLayout>