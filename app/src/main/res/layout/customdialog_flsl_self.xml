<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goodsname"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/hello_world"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_tip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="剩余："
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_syl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_tip_gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="规格："
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14"/>

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_centerInParent="true"/>


            <EditText
                android:id="@+id/et_flsl"
                android:layout_width="130dip"
                android:layout_height="@dimen/size_40"
                android:layout_above="@id/line"
            android:layout_marginLeft="40dip"
                android:layout_marginBottom="15dip"
                android:background="@drawable/background_view_rounded_single"
                android:gravity="center"
                android:hint="请输入肥料数量"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/size_sp_16"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/tv_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/line"
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/et_flsl"
                android:text="/株"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_sp_16"/>
            <RadioGroup
                android:layout_above="@id/line"
                android:layout_toRightOf="@+id/tv_dw"
                android:layout_marginRight="50dip"
                android:id="@+id/rg_select"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center|left">

                <RadioButton
                    android:id="@+id/dw_duishui"
                    android:text="倍(兑水)"
                    android:layout_width="match_parent"
                    android:layout_height="30dip" />
                <RadioButton
                    android:id="@+id/dw_gzhu"
                    android:text="g/株"
                    android:layout_width="match_parent"
                    android:layout_height="30dip" />
            </RadioGroup>
            <Button
                android:id="@+id/btn_sure"
                android:layout_width="150dip"
                android:layout_height="@dimen/size_40"
                android:layout_below="@id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dip"
                android:background="@drawable/background_view_rounded_single"
                android:text="确定"
                android:textSize="@dimen/size_14"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
