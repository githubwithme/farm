                <ListView
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dip"
                    android:background="@color/white"
                    android:divider="@color/light_gray"
                    android:dividerHeight="7dip"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


