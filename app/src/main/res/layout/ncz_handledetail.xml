<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" >

        <ImageButton
            android:id="@+id/imgbtn_back"
            android:layout_width="30dip"
            android:layout_height="@dimen/titlebar_height"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="事件处理详细信息"
            android:textColor="@color/black"
            android:textSize="@dimen/titlebar_textsize" />



        <Button
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_delete"
            android:layout_width="60dip"
            android:layout_height="45dip"
            android:layout_margin="10dip"
            android:background="@drawable/background_view_rounded_single"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/bg_yellow" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:stretchColumns="1" >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="处理者"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_reported"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择事件类型"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="处理时间"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择事件类型"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="处理结果"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/et_sjms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:gravity="right|center_vertical"
                    android:hint="未处理"
                    android:paddingLeft="10dip"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />

            <TableRow
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="处理情况"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <EditText
                    android:id="@+id/et_clqk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入处理情况"
                    android:paddingLeft="10dip"
                    android:textColor="@color/bg_yellow"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_picture"
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="处理图片"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginRight="@dimen/size_60"
                    android:layout_toRightOf="@id/tv_picture" >

                    <LinearLayout
                        android:id="@+id/ll_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/bg_selectitem" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="处理视频"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_marginRight="@dimen/size_60"
                    android:layout_toRightOf="@id/tv_video" >

                    <LinearLayout
                        android:id="@+id/ll_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>


            </RelativeLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>