<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="断蕾量"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_16"/>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_titlebar"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_NotStartBreakoff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="360px"
                android:background="@mipmap/icon_disconnect_empty"/>

            <TextView
                android:id="@+id/tv_nodetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:alpha="0.8"
                android:gravity="center"
                android:text="还没开始断蕾呢！"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_addtip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nodetail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:alpha="0.5"
                android:gravity="center"
                android:text="如需给各区下达断蕾指令，请点击下方按钮，\n系统将自动生成第一个批次\n片区管理员即可按批次上报断蕾数据"
                android:textColor="@color/text_table_horizontitle"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_starttime"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_addtip"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="80px"
                android:background="@drawable/btn_add_immediately"
                android:gravity="center"
                android:text="选择断蕾日期"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/startdl"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_starttime"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="20px"
                android:background="@drawable/btn_add_immediately"
                android:gravity="center"
                android:text="下达断蕾指令"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_note"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_totalcolumn"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_top_left"
                    android:layout_width="@dimen/width_firstcolumn"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="批次"
                    android:textColor="@color/titlebar_top"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/splitline"/>

                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:src="@mipmap/icon_arrow_left"/>

                <com.farm.widget.CustomHorizontalScrollView_Allitem
                    android:id="@+id/item_scroll_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_park"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal">
                    </LinearLayout>
                </com.farm.widget.CustomHorizontalScrollView_Allitem>

                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:src="@mipmap/icon_arrow_right"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/splitline"/>

                <TextView
                    android:id="@+id/tv_top_right"
                    android:layout_width="@dimen/width_totalcolumn"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/titlebar_top"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:id="@+id/line_middle"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_top"
                android:background="@color/splitline"/>

            <ListView
                android:id="@+id/hlistview_scroll_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_middle"
                android:layout_marginBottom="42dip"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0px"
                android:fadingEdge="none"
                android:scrollbars="none"></ListView>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_bottomcolumn"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bottom_left"
                    android:layout_width="@dimen/width_firstcolumn"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/titlebar_top"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/splitline"/>

                <com.farm.widget.CustomHorizontalScrollView_Allitem
                    android:id="@+id/totalScroll"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_total"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal">


                    </LinearLayout>
                </com.farm.widget.CustomHorizontalScrollView_Allitem>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/splitline"/>

                <TextView
                    android:id="@+id/alltoatal"
                    android:layout_width="@dimen/width_totalcolumn"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="总量"
                    android:textColor="@color/titlebar_top"
                    android:textSize="15sp"/>


            </LinearLayout>

            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_above="@+id/ll_bottom"
                android:background="@color/splitline"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/splitline"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
