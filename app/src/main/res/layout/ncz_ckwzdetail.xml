<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_topbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:contentDescription=""
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="仓库"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="磷肥"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="规格"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:id="@+id/all_quilty"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="数量"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:id="@+id/batchName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="重量"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:id="@+id/all_zhongliang"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="总值"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>


        <TextView
            android:id="@+id/all_zongzhi"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_main"/>
    <View android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/red"/>
    <TextView
        android:paddingLeft="20dip"
        android:textSize="@dimen/size_14"
        android:textColor="@color/bg_text"
        android:layout_width="match_parent"
        android:text="剩余物资批次分布"
        android:layout_height="50dip"

        android:gravity="center|left"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/red"/>
    <ListView

        android:id="@+id/wz_frame_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/red"
        android:dividerHeight="1dip"
        ></ListView>

</LinearLayout>