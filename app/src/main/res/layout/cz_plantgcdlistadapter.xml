<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dip"
            android:layout_height="65dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/noimg"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="15dip"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_plantname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="left|center_vertical"
                            android:text="MQ2452233"
                            android:textColor="@color/bg_text"
                            android:textSize="@dimen/size_14"/>

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/tv_plantname"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_14"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:scrollbarStyle="outsideInset"
                            android:text="暂无"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size_14"/>


                        <Button
                            android:id="@+id/btn_plantlist"
                            android:layout_width="45dip"
                            android:layout_height="25dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:layout_toRightOf="@+id/tv_time"
                            android:background="@drawable/round_orange"
                            android:text="植株"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_new_item"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_gravity="right"
                android:visibility="gone">

                <com.farm.widget.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@color/red"
                    app:border_color="@color/red"
                    app:border_width="0dp"/>

                <TextView
                    android:id="@+id/tv_new_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>
            </FrameLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="60dip"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/rl_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:background="@drawable/feedback"/>

                <FrameLayout
                    android:id="@+id/fl_new"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_gravity="right"
                    android:visibility="gone">

                    <com.farm.widget.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@color/red"
                        app:border_color="@color/red"
                        app:border_width="0dp"/>

                    <TextView
                        android:id="@+id/tv_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10"/>
                </FrameLayout>
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>