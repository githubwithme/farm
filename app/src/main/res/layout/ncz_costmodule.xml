<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/bg_titlebar">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/titlebar_textsize"
            android:textStyle="bold"
            android:typeface="sans"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="45dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_set_create_account"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="生产"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/size_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_specialcost"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quick_set_create_opportunity"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="专项费用"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_largecost"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quick_set_create_agent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="大额费用"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_smallcost"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quick_set_create_cw"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="小额费用"
                android:textColor="@color/bg_text"
                android:textSize="@dimen/size_14"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>