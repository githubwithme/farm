<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="1.0px"
    android:insetLeft="1.0px"
    android:insetRight="1.0px"
    android:insetTop="0.0px" >

    <selector>
        <item>
            <shape
                android:shape="oval"
                android:useLevel="false" >
                <stroke
                    android:width="1px"
                    android:color="@color/red" />

                <gradient
                    android:angle="270.0"
                    android:endColor="@color/red"
                    android:startColor="@color/red" />

                <corners
                    android:bottomLeftRadius="40dip"
                    android:bottomRightRadius="40dip"
                    android:radius="40dip"
                    android:topLeftRadius="40dip"
                    android:topRightRadius="40dip" />
            </shape>
        </item>
    </selector>

</inset>